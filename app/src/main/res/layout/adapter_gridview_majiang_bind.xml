<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="net.yundingwei.dszw.app.home.model.PaiEntity"/>

        <variable
            name="fragment"
            type="net.yundingwei.dszw.app.home.view.MenuFragment"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60.0dip"
            android:background="#FFFFFF"
            android:layout_marginBottom="5.0dip"
            android:onClick="@{(view)->fragment.selectPai(0, item)}">

            <ImageView
                android:layout_width="40.0dip"
                android:layout_height="60.0dip"
                tools:src="@drawable/yiwan"
                android:layout_gravity="center"
                bind:imgSrc="@{!item.selected ? item.resId : item.defaultResId}" />
        </FrameLayout>
    </FrameLayout>
</layout>

