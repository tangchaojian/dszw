<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mTitleView"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:background="@color/bg_blue">

        <FrameLayout
            android:id="@+id/mBackView"
            android:layout_width="45.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center"
                android:src="@mipmap/icon_arrow_left_white"/>

        </FrameLayout>


        <TextView
            android:id="@+id/mTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="软件授权"/>

        <TextView
            android:id="@+id/mTvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10.0dip"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="说明"
            android:visibility="gone"/>


    </FrameLayout>


    <EditText
        android:id="@+id/mEditPassword"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:layout_below="@+id/mTitleView"
        android:layout_marginTop="20.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:background="@drawable/shape_radius_button_gray"
        android:gravity="center"
        android:paddingLeft="10.0dip"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:hint="请输入密码" />

    <FrameLayout
        android:id="@+id/mBottomView"
        android:layout_width="match_parent"
        android:layout_height="60.0dip"
        android:layout_marginTop="40.0dip"
        android:layout_below="@+id/mEditPassword">

        <Button
            android:id="@+id/mBtnAuthorize"
            android:layout_width="match_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="确认授权"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_radius_button_red"/>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mBottomView"
        android:layout_marginTop="40.0dip"
        android:textSize="12sp"
        android:textColor="#D90000"
        android:gravity="center"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text="特别提醒：本软件仅供娱乐，用于其他用途或者赌博者后果自负"/>

</RelativeLayout>
